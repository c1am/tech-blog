<div class="col">
  <div class="card m-2">
    <div class="card-header bg-light">
      <div class="fs-3" style='font-weight: bold'>Sign Up</div>
    </div>
    <div class="card-body">
      <form class="form signupForm">
        <div class="form-group mb-3">
          <label for="username-sign-up" class="form-label" style='font-weight: bold'>Username</label>
          <input class="form-control" type="text" id="signupUsername"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password-sign-up" class="form-label" style='font-weight: bold'>Password</label>
          <input class="form-control" type="password" id="signupPassword" placeholder="At least 8 characters long"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="signup-btn">Sign Up</button>
          <a class="btn btn-primary" href="/login">Login</a>
        </div>
      </form>
      <div>

      </div>
    </div>
  </div>
</div>

