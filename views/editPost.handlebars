<div class="col">
  <div class="card m-2">
    <div class="card-header bg-light">
      <div class="fs-3" style='font-weight: bold'>Edit Post</div>
    </div>
    <div class="card-body">
      <form class="form editPostForm">
        <div class="form-group mb-3">
          <label for="editPostTitle" class="form-label" style='font-weight: bold'>Title</label>
          <textarea class="form-control" id="editPostTitle" rows="1">{{title}}</textarea>
        </div>
        <div class="form-group mb-3">
          <label for="editPostContent" class="form-label" style='font-weight: bold'>Content</label>
          <textarea class="form-control" id="editPostContent" rows="5">{{content}}</textarea>
        </div>
        <div class="form-group mb-3">
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="updatePostBtn">Update</button>
          <button class="btn btn-primary" type="submit" id="deletePostBtn">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>